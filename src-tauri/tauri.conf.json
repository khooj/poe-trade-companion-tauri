{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5174",
    "distDir": "../public"
  },
  "package": {
    "productName": "poe-trade-companion-tauri",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "show": true,
        "hide": true
      },
      "process": {
        "exit": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 600,
        "resizable": false,
        "title": "poe-trade-companion-tauri",
        "width": 800,
        "url": "index.html"
      },
      {
        "label": "outgoing",
        "title": "outgoing-trades",
        "url": "/outgoing-trades",
        "height": 300,
        "width": 96,
        "fullscreen": false,
        "resizable": false,
        "closable": false,
        "minimizable": false,
        "maximizable": false,
        "visible": false
      },
      {
        "label": "incoming",
        "title": "incoming-trades",
        "url": "/incoming-trades",
        "height": 320,
        "width": 435,
        "visible": false,
        "fullscreen": false,
        "resizable": false,
        "closable": false,
        "minimizable": false,
        "maximizable": false
      }
    ]
  }
}
